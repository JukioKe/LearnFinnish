<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/list_item_height2"
        android:layout_height="@dimen/list_item_height2"
        android:contentDescription="@string/description_image"
        android:padding="16dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height2"
        android:background="@color/category_numbers">

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/fin_word"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="YhdeksÃ¤ntoista" />

            <TextView
                android:id="@+id/eng_word"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:textAppearance="?android:textAppearanceListItem"
                android:textColor="@android:color/white"
                tools:text="Nineteen" />

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/play_icon_image"
            android:src="@drawable/play_icon" />

    </RelativeLayout>


</LinearLayout>