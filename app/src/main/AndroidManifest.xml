<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.learnfinnish">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/fin_flag"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.learnfinnish.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.learnfinnish.NumbersActivity"
            android:label="@string/category_numbers"/>
        <activity android:name="com.example.android.learnfinnish.FamilyMembersActivity" />
        <activity android:name="com.example.android.learnfinnish.ColorsActivity" />
        <activity android:name="com.example.android.learnfinnish.PhrasesActivity"/>
    </application>

</manifest>